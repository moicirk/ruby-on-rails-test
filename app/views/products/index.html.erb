<h1>Products</h1>
<h2><%= t "hello" %></h2>

<div style="margin-bottom: 20px;">
  <%= link_to "New product", new_product_path if authenticated? %>
</div>

<div id="products">
  <% @products.each do |product| %>
    <div>
      <a href="/products/<%= product.id %>">
        <%= product.id %>, <%= product.name %>, <%= product.price %>
      </a>
    </div>
  <% end %>
</div>